<Window x:Class="DevSticky.Views.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:DevSticky.Views"
        xmlns:loc="clr-namespace:DevSticky.Services"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        MinWidth="200" MinHeight="150"
        Width="320" Height="220"
        ShowInTaskbar="False"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Dark ComboBox Style -->
            <Style x:Key="DarkCombo" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource Surface1Brush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{DynamicResource Surface1Brush}"
                                          BorderThickness="0"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{DynamicResource Surface1Brush}" CornerRadius="3" Padding="6,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="16"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"/>
                                                <Path Grid.Column="1" Data="M0,0 L4,4 L8,0" 
                                                      Stroke="{DynamicResource SubtextBrush}" 
                                                      StrokeThickness="1.5"
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="8,4,24,4"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        Background="{DynamicResource Surface0Brush}"
                                        BorderBrush="{DynamicResource Surface2Brush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Margin="0,2,0,0"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Dark ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Surface1Brush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Surface2Brush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Note Window Icon Button (slightly larger than shared) -->
            <Style x:Key="NoteIconBtn" TargetType="Button" BasedOn="{StaticResource IconBtn}">
                <Setter Property="Width" Value="30"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            </Style>
        
            <!-- Close Button -->
            <Style x:Key="CloseBtn" TargetType="Button" BasedOn="{StaticResource NoteIconBtn}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource RedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Minimal Slider -->
        <Style x:Key="MiniSlider" TargetType="Slider">
            <Setter Property="Height" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border Height="4" Background="{DynamicResource Surface1Brush}" CornerRadius="2"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="12" Height="12">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Fill="{DynamicResource SubtextBrush}" Width="12" Height="12"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="{DynamicResource BaseBrush}" 
            CornerRadius="6" 
            BorderBrush="{DynamicResource Surface1Brush}" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="34"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource Surface0Brush}" 
                    CornerRadius="6,6,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown"
                    MouseRightButtonUp="Header_MouseRightButtonUp">
                <Border.ContextMenu>
                    <ContextMenu x:Name="HeaderContextMenu" 
                                 Background="{DynamicResource Surface0Brush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource Surface2Brush}">
                        <MenuItem x:Name="MoveToMonitorMenuItem" Header="{loc:Localize MoveToMonitor}">
                            <!-- Items will be populated dynamically -->
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="{loc:Localize ShowBacklinks}" Click="ShowBacklinks_Click"/>
                        <MenuItem Header="{loc:Localize OpenGraphView}" Click="OpenGraphView_Click"/>
                        <Separator/>
                        <MenuItem Header="{loc:Localize SaveAsTemplate}" Click="SaveAsTemplate_Click"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid Margin="6,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Language -->
                    <ComboBox x:Name="LanguageCombo" 
                              Grid.Column="0"
                              Width="85"
                              VerticalAlignment="Center"
                              Style="{StaticResource DarkCombo}"/>
                    
                    <!-- Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnBacklinks" Content="ðŸ”—" Style="{StaticResource NoteIconBtn}" 
                                Click="BtnBacklinks_Click" ToolTip="{loc:Localize ShowBacklinks}"/>
                        <Button x:Name="BtnPreview" Content="ðŸ‘" Style="{StaticResource NoteIconBtn}" 
                                Click="BtnPreview_Click" ToolTip="{loc:Localize TogglePreview}"
                                Visibility="Collapsed"/>
                        <Button x:Name="BtnExport" Content="ðŸ“¤" Style="{StaticResource NoteIconBtn}" 
                                Click="BtnExport_Click" ToolTip="{loc:Localize Export}"
                                Visibility="Collapsed">
                            <Button.ContextMenu>
                                <ContextMenu x:Name="ExportContextMenu"
                                             Background="{DynamicResource Surface0Brush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             BorderBrush="{DynamicResource Surface2Brush}">
                                    <MenuItem Header="{loc:Localize ExportAsHtml}" Click="ExportHtml_Click"/>
                                    <MenuItem Header="{loc:Localize ExportAsPdf}" Click="ExportPdf_Click"/>
                                    <MenuItem Header="{loc:Localize ExportAsMarkdown}" Click="ExportMarkdown_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                        <Button x:Name="BtnPin" Content="â—" Style="{StaticResource NoteIconBtn}" 
                                Click="BtnPin_Click" ToolTip="{loc:Localize Pin}"/>
                        <Button Content="ðŸ”Ž" Style="{StaticResource NoteIconBtn}" 
                                Click="BtnSearch_Click" ToolTip="{loc:Localize Search}"/>
                        <Button Content="âœ•" Style="{StaticResource CloseBtn}" 
                                Click="BtnClose_Click" ToolTip="{loc:Localize Close}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Search -->
            <Border x:Name="SearchPanel" Grid.Row="1" 
                    Background="{DynamicResource Surface0Brush}"
                    Visibility="Collapsed" Padding="6,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox" 
                             Style="{StaticResource SearchBoxStyle}"
                             FontSize="12" Padding="6,4"
                             TextChanged="SearchBox_TextChanged"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="â—€" Style="{StaticResource NoteIconBtn}" Width="24"
                                Click="BtnPrevMatch_Click"/>
                        <Button Content="â–¶" Style="{StaticResource NoteIconBtn}" Width="24"
                                Click="BtnNextMatch_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Editor and Preview Split View -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="EditorColumn" Width="*"/>
                    <ColumnDefinition x:Name="SplitterColumn" Width="0"/>
                    <ColumnDefinition x:Name="PreviewColumn" Width="0"/>
                    <ColumnDefinition x:Name="BacklinksSplitterColumn" Width="0"/>
                    <ColumnDefinition x:Name="BacklinksColumn" Width="0"/>
                </Grid.ColumnDefinitions>
                
                <!-- Editor -->
                <avalonedit:TextEditor x:Name="Editor"
                                       Grid.Column="0"
                                       FontFamily="Consolas"
                                       FontSize="13"
                                       ShowLineNumbers="False"
                                       Background="{DynamicResource BaseBrush}"
                                       Foreground="{DynamicResource TextBrush}"
                                       LineNumbersForeground="{DynamicResource Surface2Brush}"
                                       Padding="8,6"
                                       HorizontalScrollBarVisibility="Auto"
                                       VerticalScrollBarVisibility="Auto"/>
                
                <!-- Splitter (visible when preview is shown) -->
                <GridSplitter x:Name="PreviewSplitter"
                              Grid.Column="1"
                              Width="4"
                              Background="{DynamicResource Surface1Brush}"
                              HorizontalAlignment="Stretch"
                              Visibility="Collapsed"/>
                
                <!-- Markdown Preview -->
                <local:MarkdownPreviewControl x:Name="MarkdownPreview"
                                              Grid.Column="2"
                                              Visibility="Collapsed"/>
                
                <!-- Backlinks Splitter -->
                <GridSplitter x:Name="BacklinksSplitter"
                              Grid.Column="3"
                              Width="4"
                              Background="{DynamicResource Surface1Brush}"
                              HorizontalAlignment="Stretch"
                              Visibility="Collapsed"/>
                
                <!-- Backlinks Panel -->
                <local:BacklinksPanel x:Name="BacklinksPanel"
                                      Grid.Column="4"
                                      Visibility="Collapsed"/>
            </Grid>
            
            <!-- Footer with opacity + resize -->
            <Grid Grid.Row="3" Background="{DynamicResource MantleBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Slider x:Name="OpacitySlider"
                        Grid.Column="0"
                        Style="{StaticResource MiniSlider}"
                        Margin="10,0,10,0"
                        VerticalAlignment="Center"
                        Minimum="0.3" Maximum="1.0" Value="0.95"
                        ValueChanged="OpacitySlider_ValueChanged"/>
                
                <!-- Custom Resize Grip -->
                <Thumb x:Name="ResizeGrip" Grid.Column="1" 
                       Width="16" Height="16" Cursor="SizeNWSE"
                       DragDelta="ResizeGrip_DragDelta">
                    <Thumb.Template>
                        <ControlTemplate>
                            <Canvas Width="12" Height="12" Margin="2">
                                <Line X1="10" Y1="2" X2="2" Y2="10" Stroke="{DynamicResource Surface2Brush}" StrokeThickness="1"/>
                                <Line X1="10" Y1="6" X2="6" Y2="10" Stroke="{DynamicResource Surface2Brush}" StrokeThickness="1"/>
                                <Line X1="10" Y1="10" X2="10" Y2="10" Stroke="{DynamicResource Surface2Brush}" StrokeThickness="1"/>
                            </Canvas>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
            </Grid>
        </Grid>
    </Border>
</Window>
