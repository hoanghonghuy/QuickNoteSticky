<Window x:Class="DevSticky.Views.SnippetBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:DevSticky.Services"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="{loc:Localize SnippetBrowserTitle}"
        Width="800" Height="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        MinWidth="600" MinHeight="400">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- TreeView Style -->
        <Style x:Key="CategoryTreeView" TargetType="TreeView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        
        <Style x:Key="CategoryTreeViewItem" TargetType="TreeViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                    Padding="{TemplateBinding Padding}" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="Expander" Grid.Column="0"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press" Cursor="Hand">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent" Padding="2">
                                                    <Path x:Name="ExpandPath" Data="M0,0 L4,4 L0,8" 
                                                          Stroke="{DynamicResource SubtextBrush}" 
                                                          StrokeThickness="1.5" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="ExpandPath" Property="Data" Value="M0,0 L8,0 L4,4 Z"/>
                                                        <Setter TargetName="ExpandPath" Property="Fill" Value="{DynamicResource SubtextBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter x:Name="PART_Header" Grid.Column="1" 
                                                      ContentSource="Header" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Margin="16,0,0,0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Surface1Brush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Surface1Brush}"/>
                            </Trigger>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="{DynamicResource BaseBrush}" CornerRadius="8" 
            BorderBrush="{DynamicResource Surface1Brush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource Surface0Brush}" 
                    CornerRadius="8,8,0,0" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="12,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‹ " Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                        <TextBlock Text="{loc:Localize SnippetBrowserTitle}" Foreground="{DynamicResource TextBrush}" 
                                   FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                    <Button Content="âœ•" Style="{StaticResource IconBtn}" 
                            HorizontalAlignment="Right" Click="BtnClose_Click"/>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Panel: Search + Tree -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search Box -->
                    <Border Grid.Row="0" Background="{DynamicResource Surface1Brush}" 
                            CornerRadius="4" Margin="0,0,8,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ðŸ”" Margin="8,0,4,0" 
                                       VerticalAlignment="Center" Foreground="{DynamicResource SubtextBrush}"/>
                            <TextBox x:Name="SearchBox" Grid.Column="1" 
                                     Background="Transparent" BorderThickness="0"
                                     Foreground="{DynamicResource TextBrush}"
                                     CaretBrush="{DynamicResource TextBrush}"
                                     Padding="4,8" FontSize="13"
                                     TextChanged="SearchBox_TextChanged"/>
                        </Grid>
                    </Border>
                    
                    <!-- Category Tree -->
                    <Border Grid.Row="1" Background="{DynamicResource Surface0Brush}" 
                            CornerRadius="4" Margin="0,0,8,0">
                        <TreeView x:Name="CategoryTree" Style="{StaticResource CategoryTreeView}"
                                  ItemContainerStyle="{StaticResource CategoryTreeViewItem}"
                                  SelectedItemChanged="CategoryTree_SelectedItemChanged"
                                  Padding="4"/>
                    </Border>
                </Grid>
                
                <!-- Right Panel: Preview -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Snippet Info -->
                    <Border Grid.Row="0" Background="{DynamicResource Surface0Brush}" 
                            CornerRadius="4" Padding="12,8" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock x:Name="SnippetNameText" Text="{loc:Localize SelectASnippet}" 
                                       Foreground="{DynamicResource TextBrush}" 
                                       FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock x:Name="SnippetDescText" Text="" 
                                       Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="12" Margin="0,4,0,0" TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Border Background="{DynamicResource Surface1Brush}" 
                                        CornerRadius="3" Padding="6,2" Margin="0,0,6,0">
                                    <TextBlock x:Name="SnippetLangText" Text="" 
                                               Foreground="{DynamicResource SubtextBrush}" FontSize="11"/>
                                </Border>
                                <ItemsControl x:Name="TagsPanel">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource BlueBrush}" 
                                                    CornerRadius="3" Padding="6,2" Margin="0,0,4,0" Opacity="0.7">
                                                <TextBlock Text="{Binding}" 
                                                           Foreground="{DynamicResource BaseBrush}" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Code Preview -->
                    <Border Grid.Row="1" Background="{DynamicResource Surface0Brush}" 
                            CornerRadius="4" Padding="4">
                        <avalonedit:TextEditor x:Name="PreviewEditor"
                                               FontFamily="Consolas"
                                               FontSize="13"
                                               ShowLineNumbers="True"
                                               IsReadOnly="True"
                                               Background="{DynamicResource Surface0Brush}"
                                               Foreground="{DynamicResource TextBrush}"
                                               LineNumbersForeground="{DynamicResource Surface2Brush}"
                                               HorizontalScrollBarVisibility="Auto"
                                               VerticalScrollBarVisibility="Auto"/>
                    </Border>
                    
                    <!-- Placeholders Info -->
                    <Border x:Name="PlaceholdersPanel" Grid.Row="2" 
                            Background="{DynamicResource Surface0Brush}" 
                            CornerRadius="4" Padding="8" Margin="0,8,0,0" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="{loc:Localize Placeholders}" Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="11" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <ItemsControl x:Name="PlaceholdersList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource Surface1Brush}" 
                                                CornerRadius="3" Padding="6,2" Margin="0,0,4,4">
                                            <TextBlock Foreground="{DynamicResource TextBrush}" FontSize="11">
                                                <Run Text="${"/><Run Text="{Binding Index}"/><Run Text=":"/><Run Text="{Binding Name}"/><Run Text="}"/>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            
            <!-- Footer -->
            <Border Grid.Row="2" Background="{DynamicResource Surface0Brush}" 
                    CornerRadius="0,0,8,8" Padding="12,8">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="BtnExport" Content="{loc:Localize Export}" Style="{StaticResource ActionBtn}" 
                                Click="BtnExport_Click" Margin="0,0,8,0"/>
                        <Button x:Name="BtnImport" Content="{loc:Localize Import}" Style="{StaticResource ActionBtn}" 
                                Click="BtnImport_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="BtnDelete" Content="{loc:Localize Delete}" Style="{StaticResource ActionBtn}" 
                                Click="BtnDelete_Click" Margin="0,0,8,0" IsEnabled="False"/>
                        <Button x:Name="BtnInsert" Content="{loc:Localize Insert}" Style="{StaticResource PrimaryBtn}" 
                                Click="BtnInsert_Click" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
