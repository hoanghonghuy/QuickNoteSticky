<Window x:Class="DevSticky.Views.SaveAsTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:DevSticky.Services"
        Title="{loc:Localize SaveAsTemplateTitle}"
        Width="480" Height="Auto" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="{DynamicResource BaseBrush}" CornerRadius="8" 
            BorderBrush="{DynamicResource Surface1Brush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource Surface0Brush}" 
                    CornerRadius="8,8,0,0" Padding="16,12">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“ " FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Text="{loc:Localize SaveAsTemplateTitle}" Foreground="{DynamicResource TextBrush}" 
                               FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Form Content -->
            <Border Grid.Row="1" Padding="16,16,16,8">
                <StackPanel>
                    <!-- Name -->
                    <TextBlock Style="{StaticResource FieldLabel}" Text="{loc:Localize TemplateNameRequired}"/>
                    <TextBox x:Name="NameBox" Style="{StaticResource FieldInput}"/>
                    
                    <!-- Description -->
                    <TextBlock Style="{StaticResource FieldLabel}" Text="{loc:Localize Description}"/>
                    <TextBox x:Name="DescriptionBox" Style="{StaticResource FieldInput}" 
                             TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>
                    
                    <!-- Category -->
                    <TextBlock Style="{StaticResource FieldLabel}" Text="{loc:Localize Category}"/>
                    <ComboBox x:Name="CategoryCombo" Style="{StaticResource FieldCombo}" 
                              IsEditable="True"/>
                    
                    <!-- Default Language -->
                    <TextBlock Style="{StaticResource FieldLabel}" Text="{loc:Localize DefaultLanguage}"/>
                    <ComboBox x:Name="LanguageCombo" Style="{StaticResource FieldCombo}"/>
                    
                    <!-- Placeholder Preview -->
                    <Border x:Name="PlaceholderPreview" Background="{DynamicResource Surface0Brush}" 
                            CornerRadius="4" Padding="12" Margin="0,4,0,0" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="{loc:Localize DetectedPlaceholders}" 
                                       Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="11" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ItemsControl x:Name="PlaceholderList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource Surface1Brush}" 
                                                CornerRadius="3" Padding="8,4" Margin="0,0,6,6">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{}{{}}" Foreground="{DynamicResource TextBrush}" FontSize="12"/>
                                                <TextBlock Text="{Binding Name}" Foreground="{DynamicResource TextBrush}" FontSize="12"/>
                                                <TextBlock Text="{}{}}" Foreground="{DynamicResource TextBrush}" FontSize="12"/>
                                                <TextBlock Text=" - " Foreground="{DynamicResource SubtextBrush}" FontSize="12"/>
                                                <TextBlock Text="{Binding Type}" Foreground="{DynamicResource SubtextBrush}" FontSize="12"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Text="{loc:Localize PlaceholderTip}" 
                                       Foreground="{DynamicResource SubtextBrush}" 
                                       FontSize="10" FontStyle="Italic" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="{DynamicResource Surface0Brush}" 
                    CornerRadius="0,0,8,8" Padding="16,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{loc:Localize Cancel}" Style="{StaticResource ActionBtn}" 
                            Click="BtnCancel_Click" Margin="0,0,8,0"/>
                    <Button Content="{loc:Localize SaveTemplate}" Style="{StaticResource PrimaryBtn}" 
                            Click="BtnSave_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
