<Window x:Class="DevSticky.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DevSticky.Views"
        xmlns:loc="clr-namespace:DevSticky.Services"
        Title="{loc:Localize DashboardTitle}"
        Width="450" Height="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="{DynamicResource BaseBrush}" CornerRadius="8" 
            BorderBrush="{DynamicResource Surface1Brush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource Surface0Brush}" 
                    CornerRadius="8,8,0,0" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="12,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{loc:Localize Dashboard}" Foreground="{DynamicResource TextBrush}" 
                                   FontSize="14" FontWeight="SemiBold"/>
                        <!-- Filter indicator -->
                        <Border x:Name="FilterBadge" Visibility="Collapsed" Background="{DynamicResource BlueBrush}" 
                                CornerRadius="3" Padding="6,2" Margin="8,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="FilterText" FontSize="10" Foreground="{DynamicResource BaseBrush}"/>
                                <Button Content="Ã—" FontSize="10" Foreground="{DynamicResource BaseBrush}" Background="Transparent"
                                        BorderThickness="0" Padding="4,0,0,0" Cursor="Hand" Click="BtnClearFilter_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="BtnFolderView" Content="ðŸ“" Style="{StaticResource IconBtn}" 
                                Click="BtnToggleFolderView_Click" ToolTip="Toggle Folder View"/>
                        <Button x:Name="BtnGroupView" Content="ðŸ“‚" Style="{StaticResource IconBtn}" 
                                Click="BtnToggleGroupView_Click" ToolTip="{loc:Localize ToggleGroupedView}"/>
                        <Button Content="â˜°" Style="{StaticResource IconBtn}" Click="BtnSettings_Click" ToolTip="{loc:Localize Settings}"/>
                        <Button Content="âœ•" Style="{StaticResource IconBtn}" Click="BtnClose_Click" ToolTip="{loc:Localize Close}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Search Bar -->
            <Border Grid.Row="1" Background="{DynamicResource Surface0Brush}" BorderBrush="{DynamicResource Surface1Brush}" 
                    BorderThickness="0,1,0,1" Padding="12,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox"
                             Background="{DynamicResource Surface1Brush}"
                             Foreground="{DynamicResource TextBrush}"
                             CaretBrush="{DynamicResource TextBrush}"
                             SelectionBrush="{DynamicResource BlueBrush}"
                             BorderThickness="0" FontSize="13" Padding="8,6"
                             VerticalContentAlignment="Center"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="SearchBox_TextChanged"
                             KeyDown="SearchBox_KeyDown"
                             Style="{StaticResource SearchBoxStyle}"/>
                    <Button x:Name="ClearSearchButton" Grid.Column="1" Content="âœ•" 
                            Style="{StaticResource IconBtn}" Margin="8,0,0,0"
                            Click="ClearSearchButton_Click" 
                            ToolTip="{loc:Localize ClearSearch}"/>
                </Grid>
            </Border>
            
            <!-- Folders and Smart Collections Section -->
            <Border Grid.Row="2" x:Name="FoldersSection" Background="{DynamicResource Surface0Brush}" 
                    BorderBrush="{DynamicResource Surface1Brush}" BorderThickness="0,0,0,1" 
                    Visibility="Collapsed">
                <StackPanel>
                    <!-- Smart Collections -->
                    <Expander x:Name="SmartCollectionsExpander" Header="ðŸ” Smart Collections" IsExpanded="True"
                              Background="Transparent" Foreground="{DynamicResource TextBrush}">
                        <ListBox x:Name="SmartCollectionsList" Background="Transparent" BorderThickness="0"
                                 MaxHeight="150" Margin="12,8" SelectionChanged="SmartCollectionsList_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="{DynamicResource Surface1Brush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="{DynamicResource BlueBrush}"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource BaseBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Cursor="Hand">
                                        <TextBlock Text="{Binding Icon}" Margin="0,0,6,0" FontSize="12"/>
                                        <TextBlock Text="{Binding Name}" Foreground="{DynamicResource TextBrush}" FontSize="12"/>
             
                                                   Foreground="{Dynami
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Expander>
                    
                    <!-- Folders -->
                    <Expander x:Name="FoldersExpander" Header="ðŸ“ Folders" IsExpanded="True"
                              Background="Transparent" Foreground="{DynamicResource TextBrush}">
                        <TreeView x:Name="FoldersTreeView" Background="Transparent" BorderThickness="0"
                                  MaxHeight="200" Margin="12,8">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="True"/>
                                    <Setter Property="AllowDrop" Value="True"/>
                                    <EventSetter Event="Drop" Handler="FolderTreeItem_Drop"/>
                                    <EventSetter Event="DragOver" Handler="FolderTreeItem_DragOver"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal" MouseRightButtonDown="FolderItem_RightClick">
                                        <TextBlock Text="ðŸ“" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding Name}" Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding NoteCount, StringFormat=' ({0})'}" 
                                                   Foreground="{DynamicResource SubtextBrush}" FontSize="11"/>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Expander>
                </StackPanel>
            </Border>                         
            
            <!-- Notes List with Virtual Scrolling for performance -->
            <ListBox x:Name="NotesList" Grid.Row="3" 
                     Background="Transparent" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.CanContentScroll="True"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     VirtualizingPanel.ScrollUnit="Pixel"
                     SelectionChanged="NotesList_SelectionChanged">
                <ListBox.Resources>
                    <!-- Group Header Template -->
                    <DataTemplate x:Key="GroupHeaderTemplate">
                        <Border Background="{DynamicResource Surface1Brush}" CornerRadius="4" Padding="10,8" 
                                Cursor="Hand" MouseLeftButtonDown="GroupHeader_Click" Tag="{Binding Id}"
                                AllowDrop="True" Drop="GroupHeader_Drop" DragOver="GroupHeader_DragOver">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="10" Margin="0,0,6,0" Foreground="{DynamicResource SubtextBrush}" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="â–¼"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                                    <Setter Property="Text" Value="â–¶"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="ðŸ“" FontSize="12" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Name}" Foreground="{DynamicResource GreenBrush}" 
                                           FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding NoteCount, StringFormat=' ({0})'}" 
                                           Foreground="{DynamicResource SubtextBrush}" FontSize="11" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                    
                    <!-- Note Item Template -->
                    <DataTemplate x:Key="NoteItemTemplate">
                        <Grid MouseMove="NoteItem_MouseMove" MouseLeftButtonDown="NoteItem_MouseLeftButtonDown" Tag="{Binding Id}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <!-- Title Display/Edit -->
                                <Grid>
                                    <TextBlock x:Name="TitleDisplay" Text="{Binding DisplayTitle}" 
                                               Foreground="{DynamicResource TextBrush}" 
                                               FontSize="13" TextTrimming="CharacterEllipsis" MaxWidth="300" FontWeight="Medium"
                                               MouseLeftButtonDown="Title_MouseLeftButtonDown" Cursor="Hand"/>
                                    <TextBox x:Name="TitleEdit" Text="{Binding Title}" Visibility="Collapsed"
                                             Background="{DynamicResource Surface1Brush}" Foreground="{DynamicResource TextBrush}" 
                                             BorderBrush="{DynamicResource BlueBrush}"
                                             BorderThickness="1" Padding="4,2" MaxLength="50" FontSize="13"
                                             KeyDown="TitleEdit_KeyDown" LostFocus="TitleEdit_LostFocus"/>
                                </Grid>
                                
                                <!-- Info Row -->
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding PinStatus}" Foreground="{DynamicResource SubtextBrush}" 
                                               FontSize="11" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Language}" Foreground="{DynamicResource BlueBrush}" 
                                               FontSize="11" Margin="0,0,8,0"/>
                                    <!-- Group Selector -->
                                    <ComboBox x:Name="GroupSelector" SelectedValue="{Binding GroupId}" 
                                              ItemsSource="{Binding GroupOptions}"
                                              DisplayMemberPath="Name" SelectedValuePath="Id"
                                              Background="Transparent" Foreground="{DynamicResource GreenBrush}" FontSize="11"
                                              BorderThickness="0" Margin="0,0,8,0" Cursor="Hand"
                                              SelectionChanged="GroupSelector_SelectionChanged"
                                              Tag="{Binding Id}">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ComboBox">
                                                            <Grid>
                                                                <ToggleButton x:Name="ToggleButton" Background="Transparent" 
                                                                              BorderThickness="0" Focusable="False"
                                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="ðŸ“" FontSize="10" Margin="0,0,3,0"/>
                                                                        <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                          VerticalAlignment="Center"/>
                                                                        <TextBlock Text="â–¾" FontSize="8" Margin="3,0,0,0" VerticalAlignment="Center"/>
                                                                    </StackPanel>
                                                                </ToggleButton>
                                                                <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                       AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                                                    <Border Background="{DynamicResource Surface0Brush}" 
                                                                            BorderBrush="{DynamicResource Surface1Brush}" BorderThickness="1" CornerRadius="4">
                                                                        <ScrollViewer MaxHeight="200">
                                                                            <ItemsPresenter/>
                                                                        </ScrollViewer>
                                                                    </Border>
                                                                </Popup>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                    <TextBlock Text="{Binding CreatedDate}" Foreground="{DynamicResource SubtextBrush}" 
                                               FontSize="11"/>
                                </StackPanel>
                                
                                <!-- Tags Row -->
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <ItemsControl ItemsSource="{Binding Tags}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding Color}" CornerRadius="3" Padding="6,2" Margin="0,0,4,0" Opacity="0.9"
                                                        Cursor="Hand" MouseLeftButtonDown="TagBadge_Click" Tag="{Binding Id}" ToolTip="{loc:Localize ClickToFilter}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}" FontSize="10" Foreground="{DynamicResource BaseBrush}" VerticalAlignment="Center"/>
                                                        <Button Content="Ã—" FontSize="10" Foreground="{DynamicResource BaseBrush}" Background="Transparent"
                                                                BorderThickness="0" Padding="3,0,0,0" Cursor="Hand" VerticalAlignment="Center"
                                                                Tag="{Binding}" Click="BtnRemoveTag_Click" ToolTip="{loc:Localize RemoveTag}"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <!-- Add Tag Button -->
                                    <Button Content="+" FontSize="12" Style="{StaticResource IconBtn}" 
                                            Width="22" Height="18" Tag="{Binding Id}"
                                            Click="BtnAddTag_Click" ToolTip="{loc:Localize AddTag}"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Grid.Column="1" Content="âœ–" Style="{StaticResource IconBtn}" 
                                    Tag="{Binding Id}" Click="BtnDelete_Click" ToolTip="{loc:Localize Delete}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.Resources>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Margin" Value="8,4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="bd" Background="{DynamicResource Surface0Brush}" 
                                            CornerRadius="6" Padding="12,10">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="{DynamicResource Surface1Brush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource BlueBrush}"/>
                                            <Setter TargetName="bd" Property="BorderThickness" Value="1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplateSelector>
                    <local:DashboardTemplateSelector/>
                </ListBox.ItemTemplateSelector>
            </ListBox>
            
            <!-- Footer -->
            <Border Grid.Row="4" Background="{DynamicResource Surface0Brush}" CornerRadius="0,0,8,8">
                <Grid Margin="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Left: Status (always visible) -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="NoteCount" Foreground="{DynamicResource SubtextBrush}" 
                                   FontSize="12" VerticalAlignment="Center"/>
                        <!-- Cloud Sync Status -->
                        <Border x:Name="SyncStatusBadge" Visibility="Collapsed" CornerRadius="3" 
                                Padding="6,2" Margin="8,0,0,0" Cursor="Hand" MouseLeftButtonDown="SyncStatus_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="SyncStatusIcon" FontSize="10" Margin="0,0,4,0"/>
                                <TextBlock x:Name="SyncStatusText" FontSize="10" Foreground="{DynamicResource SubtextBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- Right: Action buttons with overflow menu -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Overflow Menu Button for less used actions -->
                        <Button x:Name="BtnOverflowMenu" Content="â‹¯" Style="{StaticResource IconBtn}" 
                                Width="32" Height="32" Click="BtnOverflowMenu_Click" ToolTip="{loc:Localize MoreActions}">
                            <Button.ContextMenu>
                                <ContextMenu x:Name="OverflowContextMenu">
                                    <ContextMenu.Resources>
                                        <Style TargetType="MenuItem">
                                            <Setter Property="Background" Value="{DynamicResource Surface0Brush}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="MenuItem">
                                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                                                Padding="12,8" Cursor="Hand">
                                                            <ContentPresenter ContentSource="Header"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsHighlighted" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Surface1Brush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ContextMenu.Resources>
                                    <ContextMenu.Style>
                                        <Style TargetType="ContextMenu">
                                            <Setter Property="Background" Value="{DynamicResource Surface0Brush}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource Surface1Brush}"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ContextMenu">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4">
                                                            <StackPanel IsItemsHost="True"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ContextMenu.Style>
                                    <MenuItem Header="{loc:Localize SnippetLibrary}" Click="BtnSnippetLibrary_Click"/>
                                    <MenuItem Header="{loc:Localize TemplateManagement}" Click="BtnTemplateManagement_Click"/>
                                    <MenuItem Header="{loc:Localize GraphView}" Click="BtnGraphView_Click"/>
                                    <MenuItem Header="{loc:Localize ManageGroups}" Click="BtnManageGroups_Click"/>
                                    <MenuItem Header="{loc:Localize ManageTags}" Click="BtnManageTags_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                        <!-- Important buttons visible -->
                        <Button Content="ðŸ“‹" Style="{StaticResource IconBtn}" Click="BtnKanbanView_Click" 
                                ToolTip="{loc:Localize KanbanView}" Width="32" Height="32"/>
                        <Button Content="ðŸ“…" Style="{StaticResource IconBtn}" Click="BtnTimelineView_Click" 
                                ToolTip="{loc:Localize TimelineView}" Width="32" Height="32"/>
                        <Button Content="{loc:Localize NewNote}" Style="{StaticResource ActionBtn}" 
                                Click="BtnNewNote_Click" Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
