<Window x:Class="DevSticky.Views.TimelineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DevSticky.Views"
        xmlns:loc="clr-namespace:DevSticky.Services"
        Title="{loc:Localize TimelineTitle}"
        Width="800" Height="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Day Button Style for Custom Calendar -->
            <Style x:Key="DayBtn" TargetType="Button">
                <Setter Property="Width" Value="32"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="{DynamicResource Surface1Brush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="{DynamicResource Surface2Brush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Secondary Button Style -->
            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource Surface1Brush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="{DynamicResource Surface2Brush}"/>
                                    <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource BlueBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Timeline Item Style -->
            <Style x:Key="TimelineItemStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource Surface1Brush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Surface2Brush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Margin" Value="8,4"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Surface2Brush}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BlueBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <!-- Date Header Style -->
            <Style x:Key="DateHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="Margin" Value="12,16,12,8"/>
                <Setter Property="Background" Value="{DynamicResource Surface0Brush}"/>
                <Setter Property="Padding" Value="8,4"/>
            </Style>
            
            <!-- Timeline Line Style -->
            <Style x:Key="TimelineLineStyle" TargetType="Rectangle">
                <Setter Property="Fill" Value="{DynamicResource Surface2Brush}"/>
                <Setter Property="Width" Value="2"/>
                <Setter Property="Margin" Value="20,0,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
            
            <!-- Timeline Dot Style -->
            <Style x:Key="TimelineDotStyle" TargetType="Ellipse">
                <Setter Property="Fill" Value="{DynamicResource BlueBrush}"/>
                <Setter Property="Width" Value="8"/>
                <Setter Property="Height" Value="8"/>
                <Setter Property="Margin" Value="17,8,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
            
            <!-- Navigation Button Style for Calendar -->
            <Style x:Key="NavBtn" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="{DynamicResource Surface1Brush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="{DynamicResource BaseBrush}" CornerRadius="8" 
            BorderBrush="{DynamicResource Surface1Brush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource Surface0Brush}" 
                    CornerRadius="8,8,0,0" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="12,0">
                    <TextBlock Text="{loc:Localize Timeline}" 
                               Foreground="{DynamicResource TextBrush}" 
                               FontSize="14" FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="ðŸ”„" ToolTip="{loc:Localize Refresh}" 
                                Style="{StaticResource IconBtn}" 
                                Click="BtnRefresh_Click" Margin="0,0,8,0"/>
                        <Button Content="âœ•" ToolTip="{loc:Localize Close}" 
                                Style="{StaticResource IconBtn}" 
                                Click="BtnClose_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Date Range Filter -->
            <Border Grid.Row="1" Background="{DynamicResource Surface0Brush}" 
                    BorderBrush="{DynamicResource Surface2Brush}" BorderThickness="0,1">
                <Grid Margin="12,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="{loc:Localize DateRange}" 
                               Foreground="{DynamicResource TextBrush}" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    
                    <!-- Custom Dark Date Picker - From -->
                    <Border Grid.Column="1" Background="{DynamicResource Surface1Brush}" 
                            BorderBrush="{DynamicResource Surface2Brush}" BorderThickness="1" 
                            CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="FromDateText" Text="Select date" 
                                       Foreground="{DynamicResource TextBrush}" 
                                       VerticalAlignment="Center" MinWidth="80"/>
                            <Button Content="ðŸ“…" Background="Transparent" BorderThickness="0"
                                    Foreground="{DynamicResource SubtextBrush}" Cursor="Hand"
                                    Click="FromDateButton_Click" Padding="4,0,0,0"
                                    Style="{StaticResource IconBtn}"/>
                        </StackPanel>
                    </Border>
                    <Popup x:Name="FromDatePopup" PlacementTarget="{Binding ElementName=FromDateText}" 
                           Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                        <Border Background="{DynamicResource Surface0Brush}" 
                                BorderBrush="{DynamicResource Surface2Brush}" 
                                BorderThickness="1" CornerRadius="6" Padding="12">
                            <StackPanel x:Name="FromCalendarPanel" Width="240"/>
                        </Border>
                    </Popup>
                    
                    <TextBlock Grid.Column="2" Text="{loc:Localize To}" 
                               Foreground="{DynamicResource TextBrush}" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    
                    <!-- Custom Dark Date Picker - To -->
                    <Border Grid.Column="3" Background="{DynamicResource Surface1Brush}" 
                            BorderBrush="{DynamicResource Surface2Brush}" BorderThickness="1" 
                            CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="ToDateText" Text="Select date" 
                                       Foreground="{DynamicResource TextBrush}" 
                                       VerticalAlignment="Center" MinWidth="80"/>
                            <Button Content="ðŸ“…" Background="Transparent" BorderThickness="0"
                                    Foreground="{DynamicResource SubtextBrush}" Cursor="Hand"
                                    Click="ToDateButton_Click" Padding="4,0,0,0"
                                    Style="{StaticResource IconBtn}"/>
                        </StackPanel>
                    </Border>
                    <Popup x:Name="ToDatePopup" PlacementTarget="{Binding ElementName=ToDateText}" 
                           Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                        <Border Background="{DynamicResource Surface0Brush}" 
                                BorderBrush="{DynamicResource Surface2Brush}" 
                                BorderThickness="1" CornerRadius="6" Padding="12">
                            <StackPanel x:Name="ToCalendarPanel" Width="240"/>
                        </Border>
                    </Popup>
                    
                    <Button Grid.Column="4" Content="{loc:Localize ClearFilter}" 
                            Click="BtnClearFilter_Click" 
                            Style="{DynamicResource SecondaryButtonStyle}" 
                            Margin="8,0"/>
                    
                    <TextBlock Grid.Column="5" x:Name="ItemCountText" 
                               Foreground="{DynamicResource Text2Brush}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"/>
                </Grid>
            </Border>
            
            <!-- Timeline Content -->
            <ScrollViewer Grid.Row="2" x:Name="TimelineScrollViewer" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Timeline Line -->
                    <Rectangle Grid.Column="0" Style="{StaticResource TimelineLineStyle}" 
                               Height="{Binding ActualHeight, ElementName=TimelineContent}"/>
                    
                    <!-- Timeline Content -->
                    <ItemsControl Grid.Column="1" x:Name="TimelineContent" Margin="0,12">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Date Header (if first item of the day) -->
                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding DateHeader}" 
                                               Style="{StaticResource DateHeaderStyle}"
                                               Visibility="{Binding ShowDateHeader, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- Timeline Item -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Timeline Dot -->
                                        <Ellipse Grid.Column="0" Style="{StaticResource TimelineDotStyle}"/>
                                        
                                        <!-- Note Card -->
                                        <Border Grid.Column="1" Style="{StaticResource TimelineItemStyle}" 
                                                MouseLeftButtonDown="TimelineItem_MouseLeftButtonDown"
                                                Tag="{Binding NoteId}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Time and Title -->
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding CreatedTime}" 
                                                               FontSize="10" 
                                                               Foreground="{DynamicResource Text2Brush}"
                                                               VerticalAlignment="Top" 
                                                               Margin="0,0,8,0"/>
                                                    
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Title}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="14"
                                                               Foreground="{DynamicResource TextBrush}"
                                                               TextWrapping="Wrap"/>
                                                </Grid>
                                                
                                                <!-- Content Preview -->
                                                <TextBlock Grid.Row="1" 
                                                           Text="{Binding ContentPreview}" 
                                                           FontSize="12" 
                                                           Margin="0,4,0,0"
                                                           Foreground="{DynamicResource Text2Brush}"
                                                           TextWrapping="Wrap" 
                                                           MaxHeight="80"
                                                           Visibility="{Binding HasContent, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                
                                                <!-- Tags -->
                                                <ItemsControl Grid.Row="2" 
                                                              ItemsSource="{Binding Tags}" 
                                                              Margin="0,8,0,0"
                                                              Visibility="{Binding HasTags, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource BlueBrush}" 
                                                                    CornerRadius="3" 
                                                                    Padding="6,2" 
                                                                    Margin="0,0,4,2">
                                                                <TextBlock Text="{Binding}" 
                                                                           FontSize="10" 
                                                                           Foreground="{DynamicResource BaseBrush}"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                
                                                <!-- Modified Date (if different from created) -->
                                                <TextBlock Grid.Row="3" 
                                                           Text="{Binding ModifiedInfo}" 
                                                           FontSize="9" 
                                                           Foreground="{DynamicResource Text2Brush}"
                                                           Margin="0,4,0,0"
                                                           Visibility="{Binding ShowModifiedInfo, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>