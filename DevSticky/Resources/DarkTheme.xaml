<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Catppuccin Mocha Color Palette -->
    <!-- Base Colors -->
    <Color x:Key="Base">#1E1E2E</Color>
    <Color x:Key="Mantle">#181825</Color>
    <Color x:Key="Crust">#11111B</Color>
    
    <!-- Surface Colors -->
    <Color x:Key="Surface0">#313244</Color>
    <Color x:Key="Surface1">#45475A</Color>
    <Color x:Key="Surface2">#585B70</Color>
    
    <!-- Text Colors -->
    <Color x:Key="Text">#CDD6F4</Color>
    <Color x:Key="Subtext0">#A6ADC8</Color>
    <Color x:Key="Subtext1">#BAC2DE</Color>
    <Color x:Key="Overlay0">#6C7086</Color>
    <Color x:Key="Overlay1">#7F849C</Color>
    <Color x:Key="Overlay2">#9399B2</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="Blue">#89B4FA</Color>
    <Color x:Key="Red">#F38BA8</Color>
    <Color x:Key="Green">#A6E3A1</Color>
    <Color x:Key="Yellow">#F9E2AF</Color>
    <Color x:Key="Peach">#FAB387</Color>
    <Color x:Key="Mauve">#CBA6F7</Color>
    <Color x:Key="Pink">#F5C2E7</Color>
    <Color x:Key="Teal">#94E2D5</Color>
    <Color x:Key="Sky">#89DCEB</Color>
    <Color x:Key="Lavender">#B4BEFE</Color>
    <Color x:Key="Rosewater">#F5E0DC</Color>
    <Color x:Key="Flamingo">#F2CDCD</Color>
    <Color x:Key="Maroon">#EBA0AC</Color>
    <Color x:Key="Sapphire">#74C7EC</Color>
    
    <!-- SolidColorBrushes for Base Colors -->
    <SolidColorBrush x:Key="BaseBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="MantleBrush" Color="{StaticResource Mantle}"/>
    <SolidColorBrush x:Key="CrustBrush" Color="{StaticResource Crust}"/>
    
    <!-- SolidColorBrushes for Surface Colors -->
    <SolidColorBrush x:Key="Surface0Brush" Color="{StaticResource Surface0}"/>
    <SolidColorBrush x:Key="Surface1Brush" Color="{StaticResource Surface1}"/>
    <SolidColorBrush x:Key="Surface2Brush" Color="{StaticResource Surface2}"/>

    <!-- SolidColorBrushes for Text Colors -->
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource Text}"/>
    <SolidColorBrush x:Key="Text2Brush" Color="{StaticResource Subtext1}"/>
    <SolidColorBrush x:Key="SubtextBrush" Color="{StaticResource Subtext0}"/>
    <SolidColorBrush x:Key="Subtext0Brush" Color="{StaticResource Subtext0}"/>
    <SolidColorBrush x:Key="Subtext1Brush" Color="{StaticResource Subtext1}"/>
    <SolidColorBrush x:Key="Overlay0Brush" Color="{StaticResource Overlay0}"/>
    <SolidColorBrush x:Key="Overlay1Brush" Color="{StaticResource Overlay1}"/>
    <SolidColorBrush x:Key="Overlay2Brush" Color="{StaticResource Overlay2}"/>
    
    <!-- SolidColorBrushes for Accent Colors -->
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource Blue}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}"/>
    <SolidColorBrush x:Key="YellowBrush" Color="{StaticResource Yellow}"/>
    <SolidColorBrush x:Key="PeachBrush" Color="{StaticResource Peach}"/>
    <SolidColorBrush x:Key="MauveBrush" Color="{StaticResource Mauve}"/>
    <SolidColorBrush x:Key="PinkBrush" Color="{StaticResource Pink}"/>
    <SolidColorBrush x:Key="TealBrush" Color="{StaticResource Teal}"/>
    <SolidColorBrush x:Key="SkyBrush" Color="{StaticResource Sky}"/>
    <SolidColorBrush x:Key="LavenderBrush" Color="{StaticResource Lavender}"/>
    <SolidColorBrush x:Key="RosewaterBrush" Color="{StaticResource Rosewater}"/>
    <SolidColorBrush x:Key="FlamingoBrush" Color="{StaticResource Flamingo}"/>
    <SolidColorBrush x:Key="MaroonBrush" Color="{StaticResource Maroon}"/>
    <SolidColorBrush x:Key="SapphireBrush" Color="{StaticResource Sapphire}"/>
    
    <!-- Semantic Brushes for UI Elements -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource Surface0}"/>
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="{StaticResource Surface0}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource Surface0}"/>
    <SolidColorBrush x:Key="CardHoverBackgroundBrush" Color="{StaticResource Surface1}"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource Surface1}"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource Surface1}"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{StaticResource Surface2}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Surface1}"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource Blue}"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource Surface2}"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource Surface1}"/>
    
    <!-- Primary Action Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Blue}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Red}"/>
    <SolidColorBrush x:Key="DangerTextBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Green}"/>
    <SolidColorBrush x:Key="SuccessTextBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Yellow}"/>
    <SolidColorBrush x:Key="WarningTextBrush" Color="{StaticResource Base}"/>
    
    <!-- Tray Menu Specific Colors (Requirements 4.2) -->
    <SolidColorBrush x:Key="TrayMenuBackgroundBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="TrayMenuTextBrush" Color="{StaticResource Text}"/>
    <SolidColorBrush x:Key="TrayMenuHoverBrush" Color="{StaticResource Surface1}"/>
    <SolidColorBrush x:Key="TrayMenuBorderBrush" Color="{StaticResource Surface0}"/>
    <SolidColorBrush x:Key="TrayMenuSeparatorBrush" Color="{StaticResource Surface1}"/>
    
    <!-- Tray Menu ContextMenu Style (Requirements 4.1, 4.2, 4.4) -->
    <Style x:Key="TrayMenuStyle" TargetType="{x:Type ContextMenu}">
        <Setter Property="Background" Value="{DynamicResource TrayMenuBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TrayMenuTextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TrayMenuBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContextMenu}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Tray Menu MenuItem Style (Requirements 4.4) -->
    <Style x:Key="TrayMenuItemStyle" TargetType="{x:Type MenuItem}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TrayMenuTextBrush}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter ContentSource="Header" 
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource TrayMenuHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource Overlay0Brush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Tray Menu Separator Style -->
    <Style x:Key="TrayMenuSeparatorStyle" TargetType="{x:Type Separator}">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="4,4"/>
        <Setter Property="Background" Value="{DynamicResource TrayMenuSeparatorBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Separator}">
                    <Border Background="{TemplateBinding Background}" 
                            Height="{TemplateBinding Height}"
                            Margin="{TemplateBinding Margin}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Editor Specific Colors -->
    <SolidColorBrush x:Key="EditorBackgroundBrush" Color="{StaticResource Base}"/>
    <SolidColorBrush x:Key="EditorTextBrush" Color="{StaticResource Text}"/>
    <SolidColorBrush x:Key="EditorLineNumberBrush" Color="{StaticResource Surface2}"/>
    <SolidColorBrush x:Key="EditorCaretBrush" Color="{StaticResource Text}"/>
    
    <!-- Scrollbar Colors -->
    <SolidColorBrush x:Key="ScrollbarThumbBrush" Color="{StaticResource Surface2}"/>
    <SolidColorBrush x:Key="ScrollbarTrackBrush" Color="Transparent"/>
    
</ResourceDictionary>